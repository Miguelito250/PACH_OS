@model IEnumerable<Pach_OS.Models.Insumo>

@{
    ViewData["Title"] = "Insumos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="fw-bold" style="font-family:serif">INSUMOS</h1>
</div>

<div class="container">
    <p></p>

    <div class="row" style="padding: 30px">
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Insumo
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Proveedor
                        </th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdInsumos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomInsumo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CantInsumo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProveedoresId)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Insumo
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Proveedor
                        </th>
                    </tr>
                </thead>
            </table>
        }
    </div>

</div>