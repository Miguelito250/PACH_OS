@model Pach_OS.Models.Insumo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="fw-bold" style="font-family:serif">INSUMOS</h1>
</div>

<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-4" style="padding: 10px">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Id</label>
                    <input asp-for="IdInsumos" class="form-control" />
                    <span asp-validation-for="IdInsumos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Nombre Insumo</label>
                    <input asp-for="NomInsumo" class="form-control" />
                    <span asp-validation-for="NomInsumo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Cantidad Insumo</label>
                    <input asp-for="CantInsumo" class="form-control" />
                    <span asp-validation-for="CantInsumo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProveedoresId" class="control-label"></label>
                    <select asp-for="ProveedoresId" class="form-control" asp-items="ViewBag.ProveedoresId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}